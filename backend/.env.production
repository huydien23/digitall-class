# Django Production Settings
SECRET_KEY=your-super-secure-secret-key-here-should-be-at-least-50-chars-random
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Settings (MySQL Production)
DB_NAME=qlsv_production
DB_USER=qlsv_production_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=3306

# Email Settings (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Celery Settings (Production)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True